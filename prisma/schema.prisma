// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  BABY
  ADULT
  SENIOR
}

enum Size {
  TINY
  MEDIUM
  LARGE
}

enum Energy {
  LOW
  MODERATE
  HIGH
}

enum IndependenceLevel {
  DEPENDENT
  INDEPENDENT
  SELF_SUFFICIENT
}

//TODO: add images feature, add address feature to maximize performance
model Pet {
  id                 String            @id @default(uuid())
  species            String
  race               String?
  name               String
  about              String?
  age                Age
  size               Size
  energy             Energy
  independence_level IndependenceLevel
  requirements       String[]
  address            String
  created_at         DateTime          @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  manager_name  String
  email         String
  CEP           String
  address       String
  whatsapp      String
  password_hash String
  created_at    DateTime @default(now())

  Pet Pet[]

  @@map("organizations")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}
